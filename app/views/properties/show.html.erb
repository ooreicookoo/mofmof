<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remark %>
</p>

<% if @property.nearest_stations.any? %>
  <% @nearest_station.each_with_index do |nearest_station, i| %>
  　<h4>最寄り駅 <%= i + 1 %></h4>
    <p>
      <strong>路線名:</strong>
      <%= @nearest_station.route_name %>
    </p>
    <p>
      <strong>駅名:</strong>
      <%= @nearest_station.station %>
    </p>
    <p>
      <strong>徒歩分数:</strong>
      <%= @nearest_station.min_foot %>
    </p>
　　<% end %>
<% end %>

<%= link_to 'Edit', edit_property_path(@property) %> |
<%= link_to 'Back', properties_path %>
