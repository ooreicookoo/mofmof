<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>
<p>
  <strong>賃料:</strong>
  <%= "#{@property.rent.to_s(:delimited)}円" %>
</p>
<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>
<p>
  <strong>築年数:</strong>
  <%= @property.age %>
</p>
<p>
  <strong>備考:</strong>
  <%= @property.remark %>
</p>
<hr>
<% if @nearest_stations.present? %>
<hr>
  <% @nearest_stations.each_with_index do |nearest_station, i| %>
  　<h4>最寄り駅 <%= i + 1 %></h4>
    <p>
      <strong>路線名:</strong>
      <%= @nearest_station.route_name %>
    </p>
    <p>
      <strong>駅名:</strong>
      <%= @nearest_station.station %>
    </p>
    <p>
      <strong>徒歩分数:</strong>
      <%= @nearest_station.min_foot %>
    </p>
　　<% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
